<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCVCOurseItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="5dp">

        <!--Textview for displaying our Course Name-->
        <TextView
            android:id="@+id/user_name_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="UserName"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_admin_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Admin"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <!--Textview for displaying our Course Duration-->
        <TextView
            android:id="@+id/user_email_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Email"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btn_view_user"
            android:text="@string/view_user"
            android:padding="0dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCVCOurseItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="5dp">

        <!--Textview for displaying our Course Name-->
        <TextView
            android:id="@+id/event_name_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="EventName"
            android:textColor="@color/purple_500"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!--Textview for displaying our Course Duration-->
        <TextView
            android:id="@+id/event_date_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/event_uploaded_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="uploaded"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/event_description_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Description"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <!--Textview for displaying our Course Description-->
        <TextView
            android:id="@+id/event_activities_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Activities"
            android:textColor="@color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btn_edit_event"
            android:text="@string/edit_event"
            android:padding="0dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
